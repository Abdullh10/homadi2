        document.getElementById('current-date').textContent = new Date().toLocaleDateString('ar-EG');

        document.addEventListener('DOMContentLoaded', function() {
            initializeSystem();
            initializeNavigation();
            initializeStudentManagement();
            initializeTreatmentPlansSystem();
        });

        function initializeSystem() {
            updateStatistics();
            updateStudentsList();
            updateTeachersList();
            createBehaviorChart();
            createComparisonChart();
            updateTopImprovers();
        }

        function initializeStudentManagement() {
            document.getElementById('add-student-btn').addEventListener('click', function() {
                const form = document.getElementById('add-student-form');
                form.style.display = form.style.display === 'none' ? 'block' : 'none';
            });
            
            document.getElementById('cancel-add-student').addEventListener('click', function() {
                document.getElementById('add-student-form').style.display = 'none';
                resetStudentForm();
            });
            
            document.getElementById('save-new-student').addEventListener('click', saveNewStudent);
            document.getElementById('student-search').addEventListener('input', searchStudents);
            document.getElementById('export-excel').addEventListener('click', exportToExcel);
            document.getElementById('export-pdf').addEventListener('click', exportToPDF);
        }

        function initializeTreatmentPlansSystem() {
            const studentSelect = document.getElementById('student-name');
            studentSelect.innerHTML = '<option value="">اختر الطالب</option>';
            studentsData.forEach((student, index) => {
                const option = document.createElement('option');
                option.value = index;
                option.textContent = student.name;
                studentSelect.appendChild(option);
            });
            
            const subjectSelect = document.getElementById('subject');
            const groupSubjectSelect = document.getElementById('group-subject');
            
            subjectSelect.innerHTML = '<option value="">اختر المادة</option>';
            groupSubjectSelect.innerHTML = '<option value="">اختر المادة</option>';
            
            teachersData.forEach(teacher => {
                const option1 = document.createElement('option');
                option1.value = teacher.subject;
                option1.textContent = `${teacher.subject} - ${teacher.name}`;
                subjectSelect.appendChild(option1);
                
                const option2 = document.createElement('option');
                option2.value = teacher.subject;
                option2.textContent = teacher.subject;
                groupSubjectSelect.appendChild(option2);
            });
            
            document.getElementById('individual-plan-card').addEventListener('click', function() {
                selectPlanType('individual');
            });
            
            document.getElementById('group-plan-card').addEventListener('click', function() {
                selectPlanType('group');
            });
            
            document.getElementById('subject').addEventListener('change', updateTeacherName);
            document.getElementById('group-subject').addEventListener('change', updateGroupTeacherName);
            
            initializeWeekTracker();
            
            document.getElementById('save-individual-plan').addEventListener('click', saveIndividualPlan);
            document.getElementById('save-group-plan').addEventListener('click', saveGroupPlan);
            document.getElementById('export-individual-plan').addEventListener('click', exportIndividualPlanToPDF);
            document.getElementById('export-group-plan').addEventListener('click', exportGroupPlanToPDF);
            
            updateGroupStudentsList();
            updateTreatmentPlansTable();
            
            document.getElementById('generate-excellence-report').addEventListener('click', function() {
                showNotification('جاري إنشاء تقرير الطلاب المتميزين وإرساله عبر ClassDojo...', 'info');
            });
            
            document.getElementById('generate-struggling-report').addEventListener('click', function() {
                showNotification('جاري إنشاء تقرير الطلاب المتعثرين وإرساله عبر ClassDojo...', 'info');
            });
            
            document.getElementById('generate-comprehensive-report').addEventListener('click', function() {
                showNotification('جاري إنشاء التقرير الشامل عن مبادرة هُمام...', 'info');
            });
        }

        function saveDataToLocalStorage() {
            localStorage.setItem('humamStudentsData', JSON.stringify(studentsData));
            localStorage.setItem('humamTreatmentPlans', JSON.stringify(treatmentPlans));
        }

        function saveNewStudent() {
            const name = document.getElementById('new-student-name').value;
            
            if (!name) {
                showNotification('يرجى إدخال اسم الطالب', 'error');
                return;
            }
            
            const newStudent = {
                name: name,
                before: {
                    interaction: parseInt(document.getElementById('before-interaction').value) || 0,
                    participation: parseInt(document.getElementById('before-participation').value) || 0,
                    hardWork: parseInt(document.getElementById('before-hardWork').value) || 0,
                    sleep: parseInt(document.getElementById('before-sleep').value) || 0,
                    interruption: parseInt(document.getElementById('before-interruption').value) || 0,
                    nonInteraction: parseInt(document.getElementById('before-nonInteraction').value) || 0
                },
                after: {
                    interaction: parseInt(document.getElementById('after-interaction').value) || 0,
                    participation: parseInt(document.getElementById('after-participation').value) || 0,
                    hardWork: parseInt(document.getElementById('after-hardWork').value) || 0,
                    sleep: parseInt(document.getElementById('after-sleep').value) || 0,
                    interruption: parseInt(document.getElementById('after-interruption').value) || 0,
                    nonInteraction: parseInt(document.getElementById('after-nonInteraction').value) || 0
                }
            };
            
            studentsData.push(newStudent);
            saveDataToLocalStorage();
            updateSystemAfterStudentAdded();
            document.getElementById('add-student-form').style.display = 'none';
            resetStudentForm();
            showNotification('تم إضافة الطالب بنجاح وتحديث جميع الرسوم البيانية', 'success');
        }

        function updateSystemAfterStudentAdded() {
            updateStatistics();
            updateStudentsList();
            updateCharts();
            updateTopImprovers();
            initializeTreatmentPlansSystem();
        }

        function resetStudentForm() {
            document.getElementById('new-student-name').value = '';
            const inputs = ['before-interaction', 'before-participation', 'before-hardWork', 'before-sleep', 'before-interruption', 'before-nonInteraction', 'after-interaction', 'after-participation', 'after-hardWork', 'after-sleep', 'after-interruption', 'after-nonInteraction'];
            inputs.forEach(id => document.getElementById(id).value = '0');
        }

        function updateStatistics() {
            document.getElementById('total-students').textContent = studentsData.length;
            
            let needsFollowup = 0;
            studentsData.forEach(student => {
                const totalBefore = student.before.interaction + student.before.participation + student.before.hardWork;
                const totalAfter = student.after.interaction + student.after.participation + student.after.hardWork;
                const improvement = totalBefore > 0 ? ((totalAfter - totalBefore) / totalBefore) * 100 : 0;
                if (improvement < 20) needsFollowup++;
            });
            document.getElementById('needs-followup').textContent = needsFollowup;
            document.getElementById('parent-participation').textContent = "78%";
            
            let totalImprovement = 0;
            studentsData.forEach(student => {
                const totalBefore = student.before.interaction + student.before.participation + student.before.hardWork;
                const totalAfter = student.after.interaction + student.after.participation + student.after.hardWork;
                const improvement = totalBefore > 0 ? ((totalAfter - totalBefore) / totalBefore) * 100 : 0;
                totalImprovement += improvement;
            });
            const avgImprovement = Math.round(totalImprovement / studentsData.length);
            document.getElementById('avg-improvement').textContent = `${avgImprovement}%`;
        }

        function updateStudentsList() {
            const studentsTable = document.getElementById('students-table');
            studentsTable.innerHTML = '';
            
            studentsData.forEach((student, index) => {
                const totalBefore = student.before.interaction + student.before.participation + student.before.hardWork;
                const totalAfter = student.after.interaction + student.after.participation + student.after.hardWork;
                const improvement = totalBefore > 0 ? ((totalAfter - totalBefore) / totalBefore) * 100 : 0;
                
                const row = document.createElement('tr');
                row.innerHTML = `
                    <td>${student.name}</td>
                    <td>${student.before.interaction}</td>
                    <td>${student.before.participation}</td>
                    <td>${student.before.hardWork}</td>
                    <td>${student.before.sleep}</td>
                    <td>${student.before.interruption}</td>
                    <td>${student.before.nonInteraction}</td>
                    <td>${student.after.interaction}</td>
                    <td>${student.after.participation}</td>
                    <td>${student.after.hardWork}</td>
                    <td>${student.after.sleep}</td>
                    <td>${student.after.interruption}</td>
                    <td>${student.after.nonInteraction}</td>
                    <td class="${improvement > 0 ? 'improvement' : 'regression'}">${Math.round(improvement)}%</td>
                    <td>
                        <div class="student-actions">
                            <button class="btn btn-sm btn-outline-primary edit-student-btn" data-index="${index}">
                                <i class="fas fa-edit"></i>
                            </button>
                            <button class="btn btn-sm btn-outline-danger delete-student-btn" data-index="${index}">
                                <i class="fas fa-trash"></i>
                            </button>
                        </div>
                    </td>
                `;
                studentsTable.appendChild(row);
            });
            
            document.querySelectorAll('.delete-student-btn').forEach(btn => {
                btn.addEventListener('click', function() {
                    const index = parseInt(this.getAttribute('data-index'));
                    deleteStudent(index);
                });
            });
        }

        function updateTeachersList() {
            const teachersList = document.getElementById('teachers-list');
            teachersList.innerHTML = '';
            
            teachersData.forEach(teacher => {
                const teacherCard = document.createElement('div');
                teacherCard.className = 'teacher-card';
                teacherCard.innerHTML = `
                    <h5>${teacher.name}</h5>
                    <p class="mb-1"><strong>المادة:</strong> ${teacher.subject}</p>
                    <p class="mb-0"><strong>عدد الطلاب:</strong> ${studentsData.length}</p>
                `;
                teachersList.appendChild(teacherCard);
            });
        }

        function deleteStudent(index) {
            if (confirm('هل أنت متأكد من حذف هذا الطالب؟')) {
                studentsData.splice(index, 1);
                saveDataToLocalStorage();
                updateSystemAfterStudentAdded();
                showNotification('تم حذف الطالب بنجاح', 'success');
            }
        }

        function searchStudents() {
            const searchTerm = document.getElementById('student-search').value.toLowerCase();
            const rows = document.querySelectorAll('#students-table tr');
            
            rows.forEach(row => {
                const name = row.cells[0].textContent.toLowerCase();
                row.style.display = name.includes(searchTerm) ? '' : 'none';
            });
        }

        function createBehaviorChart() {
            const ctx = document.getElementById('behaviorChart').getContext('2d');
            
            let totalPositiveBefore = 0, totalNegativeBefore = 0, totalPositiveAfter = 0, totalNegativeAfter = 0;
            
            studentsData.forEach(student => {
                totalPositiveBefore += student.before.interaction + student.before.participation + student.before.hardWork;
                totalNegativeBefore += student.before.sleep + student.before.interruption + student.before.nonInteraction;
                totalPositiveAfter += student.after.interaction + student.after.participation + student.after.hardWork;
                totalNegativeAfter += student.after.sleep + student.after.interruption + student.after.nonInteraction;
            });
            
            const avgPositiveBefore = Math.round(totalPositiveBefore / studentsData.length);
            const avgNegativeBefore = Math.round(totalNegativeBefore / studentsData.length);
            const avgPositiveAfter = Math.round(totalPositiveAfter / studentsData.length);
            const avgNegativeAfter = Math.round(totalNegativeAfter / studentsData.length);
            
            behaviorChart = new Chart(ctx, {
                type: 'bar',
                data: {
                    labels: ['إيجابية قبل', 'سلبية قبل', 'إيجابية بعد', 'سلبية بعد'],
                    datasets: [{
                        label: 'متوسط السلوكيات',
                        data: [avgPositiveBefore, avgNegativeBefore, avgPositiveAfter, avgNegativeAfter],
                        backgroundColor: [
                            'rgba(39, 174, 96, 0.7)',
                            'rgba(231, 76, 60, 0.7)',
                            'rgba(39, 174, 96, 0.9)',
                            'rgba(231, 76, 60, 0.9)'
                        ],
                        borderColor: [
                            'rgba(39, 174, 96, 1)',
                            'rgba(231, 76, 60, 1)',
                            'rgba(39, 174, 96, 1)',
                            'rgba(231, 76, 60, 1)'
                        ],
                        borderWidth: 1
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    scales: {
                        y: {
                            beginAtZero: true,
                            title: {
                                display: true,
                                text: 'متوسط النقاط'
                            }
                        }
                    },
                    plugins: {
                        legend: { display: false },
                        title: {
                            display: true,
                            text: 'متوسط السلوكيات الإيجابية والسلبية'
                        }
                    }
                }
            });
        }

        function createComparisonChart() {
            const ctx = document.getElementById('comparisonChart').getContext('2d');
            
            let interactionBefore = 0, participationBefore = 0, hardWorkBefore = 0;
            let interactionAfter = 0, participationAfter = 0, hardWorkAfter = 0;
            
            studentsData.forEach(student => {
                interactionBefore += student.before.interaction;
                participationBefore += student.before.participation;
                hardWorkBefore += student.before.hardWork;
                interactionAfter += student.after.interaction;
                participationAfter += student.after.participation;
                hardWorkAfter += student.after.hardWork;
            });
            
            const avgInteractionBefore = Math.round(interactionBefore / studentsData.length);
            const avgParticipationBefore = Math.round(participationBefore / studentsData.length);
            const avgHardWorkBefore = Math.round(hardWorkBefore / studentsData.length);
            const avgInteractionAfter = Math.round(interactionAfter / studentsData.length);
            const avgParticipationAfter = Math.round(participationAfter / studentsData.length);
            const avgHardWorkAfter = Math.round(hardWorkAfter / studentsData.length);
            
            comparisonChart = new Chart(ctx, {
                type: 'radar',
                data: {
                    labels: ['التفاعل الصفي', 'المشاركة الفاعلة', 'العمل بجد'],
                    datasets: [
                        {
                            label: 'قبل المبادرة',
                            data: [avgInteractionBefore, avgParticipationBefore, avgHardWorkBefore],
                            backgroundColor: 'rgba(54, 162, 235, 0.2)',
                            borderColor: 'rgba(54, 162, 235, 1)',
                            borderWidth: 2
                        },
                        {
                            label: 'بعد المبادرة',
                            data: [avgInteractionAfter, avgParticipationAfter, avgHardWorkAfter],
                            backgroundColor: 'rgba(255, 99, 132, 0.2)',
                            borderColor: 'rgba(255, 99, 132, 1)',
                            borderWidth: 2
                        }
                    ]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    scales: {
                        r: {
                            angleLines: { display: true },
                            suggestedMin: 0,
                            suggestedMax: 15
                        }
                    },
                    plugins: {
                        title: {
                            display: true,
                            text: 'مقارنة السلوكيات الإيجابية قبل وبعد المبادرة'
                        }
                    }
                }
            });
        }

        function updateCharts() {
            if (behaviorChart) behaviorChart.destroy();
            if (comparisonChart) comparisonChart.destroy();
            createBehaviorChart();
            createComparisonChart();
        }

        function updateTopImprovers() {
            const topImproversTable = document.getElementById('top-improvers-table');
            topImproversTable.innerHTML = '';
            
            const studentsWithImprovement = studentsData.map((student, index) => {
                const totalBefore = student.before.interaction + student.before.participation + student.before.hardWork;
                const totalAfter = student.after.interaction + student.after.participation + student.after.hardWork;
                const improvement = totalBefore > 0 ? ((totalAfter - totalBefore) / totalBefore) * 100 : 0;
                
                return {
                    index: index,
                    name: student.name,
                    improvement: improvement,
                    interactionImprovement: student.after.interaction - student.before.interaction,
                    participationImprovement: student.after.participation - student.before.participation,
                    hardWorkImprovement: student.after.hardWork - student.before.hardWork
                };
            });
            
            studentsWithImprovement.sort((a, b) => b.improvement - a.improvement);
            const top5 = studentsWithImprovement.slice(0, 5);
            
            top5.forEach((student, rank) => {
                const row = document.createElement('tr');
                row.innerHTML = `
                    <td>${rank + 1}</td>
                    <td>${student.name}</td>
                    <td class="improvement">+${Math.round(student.improvement)}%</td>
                    <td>+${student.interactionImprovement}</td>
                    <td>+${student.participationImprovement}</td>
                    <td>+${student.hardWorkImprovement}</td>
                `;
                topImproversTable.appendChild(row);
            });
        }

        function initializeNavigation() {
            document.querySelectorAll('.nav-link[data-page]').forEach(link => {
                link.addEventListener('click', function(e) {
                    e.preventDefault();
                    const pageId = this.getAttribute('data-page');
                    showPage(pageId);
                    
                    document.querySelectorAll('.nav-link').forEach(navLink => {
                        navLink.classList.remove('active');
                    });
                    this.classList.add('active');
                });
            });
        }

        function showPage(pageId) {
            document.querySelectorAll('.page-section').forEach(page => {
                page.classList.remove('active');
            });
            document.getElementById(pageId).classList.add('active');
        }

        function selectPlanType(type) {
            const individualCard = document.getElementById('individual-plan-card');
            const groupCard = document.getElementById('group-plan-card');
            const individualForm = document.getElementById('individual-plan-form');
            const groupForm = document.getElementById('group-plan-form');
            
            if (type === 'individual') {
                individualCard.classList.add('selected');
                groupCard.classList.remove('selected');
                individualForm.style.display = 'block';
                groupForm.style.display = 'none';
            } else {
                individualCard.classList.remove('selected');
                groupCard.classList.add('selected');
                individualForm.style.display = 'none';
                groupForm.style.display = 'block';
            }
        }

        function updateTeacherName() {
            const subject = document.getElementById('subject').value;
            const teacher = teachersData.find(t => t.subject === subject);
            document.getElementById('teacher-name').value = teacher ? teacher.name : '';
        }

        function updateGroupTeacherName() {
            const subject = document.getElementById('group-subject').value;
            const teacher = teachersData.find(t => t.subject === subject);
            document.getElementById('group-teacher').value = teacher ? teacher.name : '';
        }

        function initializeWeekTracker() {
            const weekTracker = document.getElementById('week-tracker');
            weekTracker.innerHTML = '';
            
            for (let i = 1; i <= 16; i++) {
                const weekItem = document.createElement('div');
                weekItem.className = 'week-item';
                if (i <= 8) weekItem.classList.add('active');
                weekItem.innerHTML = `
                    <div>الأسبوع ${i}</div>
                    <div>
                        <input type="checkbox" class="form-check-input" id="week-${i}">
                    </div>
                `;
                weekTracker.appendChild(weekItem);
            }
        }

        function updateGroupStudentsList() {
            const studentsList = document.getElementById('group-students-list');
            studentsList.innerHTML = '';
            
            studentsData.forEach((student, index) => {
                const studentItem = document.createElement('div');
                studentItem.className = 'form-check';
                studentItem.innerHTML = `
                    <input class="form-check-input" type="checkbox" id="group-student-${index}">
                    <label class="form-check-label" for="group-student-${index}">
                        ${student.name}
                    </label>
                `;
                studentsList.appendChild(studentItem);
            });
        }

        function saveIndividualPlan() {
            const studentIndex = document.getElementById('student-name').value;
            const subject = document.getElementById('subject').value;
            const treatmentSteps = document.getElementById('treatment-steps').value;
            const progressIndicators = document.getElementById('progress-indicators').value;
            
            if (!studentIndex || !treatmentSteps || !progressIndicators) {
                showNotification('يرجى ملء جميع الحقول المطلوبة', 'error');
                return;
            }
            
            const newPlan = {
                id: treatmentPlans.length + 1,
                studentId: parseInt(studentIndex),
                type: "فردية",
                subject: document.getElementById('subject').options[document.getElementById('subject').selectedIndex].text,
                startDate: new Date().toISOString().split('T')[0],
                progress: 0,
                lastUpdate: new Date().toISOString().split('T')[0],
                status: "نشط"
            };
            
            treatmentPlans.push(newPlan);
            saveDataToLocalStorage();
            
            document.getElementById('student-name').value = '';
            document.getElementById('treatment-steps').value = '';
            document.getElementById('progress-indicators').value = '';
            document.getElementById('teacher-notes').value = '';
            document.getElementById('parent-signature').value = '';
            
            updateTreatmentPlansTable();
            showNotification('تم حفظ الخطة الفردية بنجاح', 'success');
        }

        function saveGroupPlan() {
            const subject = document.getElementById('group-subject').value;
            const notes = document.getElementById('group-notes').value;
            
            const selectedStudents = [];
            studentsData.forEach((student, index) => {
                const checkbox = document.getElementById(`group-student-${index}`);
                if (checkbox && checkbox.checked) {
                    selectedStudents.push(student.name);
                }
            });
            
            if (selectedStudents.length === 0) {
                showNotification('يرجى اختيار طالب واحد على الأقل', 'error');
                return;
            }
            
            const newPlan = {
                id: treatmentPlans.length + 1,
                studentId: null,
                type: "جماعية",
                subject: document.getElementById('group-subject').options[document.getElementById('group-subject').selectedIndex].text,
                startDate: new Date().toISOString().split('T')[0],
                progress: 0,
                lastUpdate: new Date().toISOString().split('T')[0],
                status: "نشط",
                students: selectedStudents
            };
            
            treatmentPlans.push(newPlan);
            saveDataToLocalStorage();
            
            document.getElementById('group-notes').value = '';
            studentsData.forEach((student, index) => {
                const checkbox = document.getElementById(`group-student-${index}`);
                if (checkbox) checkbox.checked = false;
            });
            
            updateTreatmentPlansTable();
            showNotification('تم حفظ الخطة الجماعية بنجاح', 'success');
        }

        function updateTreatmentPlansTable() {
            const tableBody = document.getElementById('treatment-plans-table');
            tableBody.innerHTML = '';
            
            treatmentPlans.forEach(plan => {
                const student = plan.studentId !== null ? studentsData[plan.studentId] : { name: "مجموعة طلاب" };
                
                let progressClass = plan.progress >= 80 ? "good-behavior" : plan.progress >= 50 ? "" : "bad-behavior";
                let statusClass = plan.status === "نشط" ? "good-behavior" : "";
                
                const row = document.createElement('tr');
                row.innerHTML = `
                    <td>${student.name}</td>
                    <td>${plan.type}</td>
                    <td>${plan.subject}</td>
                    <td>${plan.startDate}</td>
                    <td class="${progressClass}">
                        <div class="progress">
                            <div class="progress-bar" role="progressbar" style="width: ${plan.progress}%">${plan.progress}%</div>
                        </div>
                    </td>
                    <td>${plan.lastUpdate}</td>
                    <td class="${statusClass}">${plan.status}</td>
                    <td>
                        <button class="btn btn-sm btn-outline-primary view-plan-btn" data-id="${plan.id}">عرض</button>
                        <button class="btn btn-sm btn-outline-warning mt-1 edit-plan-btn" data-id="${plan.id}">تعديل</button>
                    </td>
                `;
                tableBody.appendChild(row);
            });
        }

        function exportIndividualPlanToPDF() {
            showNotification('جاري تصدير الخطة الفردية إلى PDF...', 'info');
            
            const studentIndex = document.getElementById('student-name').value;
            const studentName = studentIndex ? studentsData[studentIndex].name : 'غير محدد';
            const subject = document.getElementById('subject').options[document.getElementById('subject').selectedIndex]?.text || 'غير محدد';
            const teacherName = document.getElementById('teacher-name').value || 'غير محدد';
            const treatmentSteps = document.getElementById('treatment-steps').value || 'لم يتم إدخال خطوات';
            const progressIndicators = document.getElementById('progress-indicators').value || 'لم يتم إدخال مؤشرات';
            const teacherNotes = document.getElementById('teacher-notes').value || 'لا توجد ملاحظات';
            const parentSignature = document.getElementById('parent-signature').value || 'غير موقع';
            
            const pdfContent = `
                <div class="pdf-content">
                    <div class="pdf-header">
                        <h1>الخطة العلاجية الفردية</h1>
                        <h2>نظام هُمام - همزة الوصل بين الأسرة والمدرسة</h2>
                    </div>
                    
                    <div class="pdf-section">
                        <div class="pdf-section-title">معلومات الطالب</div>
                        <div class="pdf-info-row">
                            <span class="pdf-info-label">اسم الطالب:</span>
                            <span>${studentName}</span>
                        </div>
                        <div class="pdf-info-row">
                            <span class="pdf-info-label">الصف:</span>
                            <span>الأول الثانوي</span>
                        </div>
                        <div class="pdf-info-row">
                            <span class="pdf-info-label">المادة:</span>
                            <span>${subject}</span>
                        </div>
                        <div class="pdf-info-row">
                            <span class="pdf-info-label">المعلم المسؤول:</span>
                            <span>${teacherName}</span>
                        </div>
                    </div>
                    
                    <div class="pdf-section">
                        <div class="pdf-section-title">الخطوات المقترحة للعلاج</div>
                        <p style="padding: 15px; line-height: 1.8;">${treatmentSteps}</p>
                    </div>
                    
                    <div class="pdf-section">
                        <div class="pdf-section-title">مؤشرات التقدم</div>
                        <p style="padding: 15px; line-height: 1.8;">${progressIndicators}</p>
                    </div>
                    
                    <div class="pdf-section">
                        <div class="pdf-section-title">ملاحظات المعلم</div>
                        <p style="padding: 15px; line-height: 1.8;">${teacherNotes}</p>
                    </div>
                    
                    <div class="pdf-section">
                        <div class="pdf-section-title">التوقيعات</div>
                        <div class="pdf-info-row">
                            <span class="pdf-info-label">توقيع ولي الأمر:</span>
                            <span>${parentSignature}</span>
                        </div>
                        <div class="pdf-info-row">
                            <span class="pdf-info-label">توقيع المرشد الطلابي:</span>
                            <span>منصور موسى حامطي</span>
                        </div>
                    </div>
                    
                    <div class="pdf-footer">
                        <p>تاريخ الإصدار: ${new Date().toLocaleDateString('ar-EG')}</p>
                        <p>نظام هُمام - جميع الحقوق محفوظة © 2023</p>
                    </div>
                </div>
            `;
            
            const element = document.createElement('div');
            element.innerHTML = pdfContent;
            element.style.position = 'absolute';
            element.style.left = '-9999px';
            document.body.appendChild(element);
            
            const opt = {
                margin: 10,
                filename: `خطة_علاجية_فردية_${studentName}.pdf`,
                image: { type: 'jpeg', quality: 0.98 },
                html2canvas: { scale: 2, useCORS: true },
                jsPDF: { unit: 'mm', format: 'a4', orientation: 'portrait' }
            };
            
            html2pdf().set(opt).from(element).save().then(() => {
                document.body.removeChild(element);
                showNotification('تم تصدير الخطة الفردية إلى PDF بنجاح', 'success');
            }).catch(error => {
                document.body.removeChild(element);
                console.error('خطأ في تصدير PDF:', error);
                showNotification('حدث خطأ أثناء تصدير PDF', 'error');
            });
        }

        function exportGroupPlanToPDF() {
            showNotification('جاري تصدير الخطة الجماعية إلى PDF...', 'info');
            
            const subject = document.getElementById('group-subject').options[document.getElementById('group-subject').selectedIndex]?.text || 'غير محدد';
            const classLevel = document.getElementById('group-class').options[document.getElementById('group-class').selectedIndex]?.text || 'غير محدد';
            const teacherName = document.getElementById('group-teacher').value || 'غير محدد';
            const notes = document.getElementById('group-notes').value || 'لا توجد ملاحظات';
            
            const selectedStudents = [];
            studentsData.forEach((student, index) => {
                const checkbox = document.getElementById(`group-student-${index}`);
                if (checkbox && checkbox.checked) {
                    selectedStudents.push(student.name);
                }
            });
            
            const studentsListHTML = selectedStudents.length > 0 
                ? selectedStudents.map(name => `<li style="padding: 5px 0;">${name}</li>`).join('')
                : '<li>لم يتم اختيار طلاب</li>';
            
            const selectedStrategies = [];
            const strategies = [
                { name: 'التعلم التعاوني', id: 'strategy1' },
                { name: 'التعلم النشط', id: 'strategy2' },
                { name: 'التفريد في التعليم', id: 'strategy3' },
                { name: 'التعلم القائم على المشاريع', id: 'strategy4' }
            ];
            
            strategies.forEach(strategy => {
                const checkbox = document.getElementById(strategy.id);
                if (checkbox && checkbox.checked) {
                    selectedStrategies.push(strategy.name);
                }
            });
            
            const strategiesListHTML = selectedStrategies.length > 0
                ? selectedStrategies.map(name => `<li style="padding: 5px 0;">${name}</li>`).join('')
                : '<li>لم يتم اختيار استراتيجيات</li>';
            
            const pdfContent = `
                <div class="pdf-content">
                    <div class="pdf-header">
                        <h1>الخطة العلاجية الجماعية</h1>
                        <h2>نظام هُمام - همزة الوصل بين الأسرة والمدرسة</h2>
                    </div>
                    
                    <div class="pdf-section">
                        <div class="pdf-section-title">معلومات الخطة</div>
                        <div class="pdf-info-row">
                            <span class="pdf-info-label">المادة:</span>
                            <span>${subject}</span>
                        </div>
                        <div class="pdf-info-row">
                            <span class="pdf-info-label">الصف:</span>
                            <span>${classLevel}</span>
                        </div>
                        <div class="pdf-info-row">
                            <span class="pdf-info-label">المعلم المسؤول:</span>
                            <span>${teacherName}</span>
                        </div>
                    </div>
                    
                    <div class="pdf-section">
                        <div class="pdf-section-title">الطلاب المستهدفون</div>
                        <ul style="padding: 15px 30px; line-height: 1.8;">
                            ${studentsListHTML}
                        </ul>
                    </div>
                    
                    <div class="pdf-section">
                        <div class="pdf-section-title">الاستراتيجيات التعليمية المقترحة</div>
                        <ul style="padding: 15px 30px; line-height: 1.8;">
                            ${strategiesListHTML}
                        </ul>
                    </div>
                    
                    <div class="pdf-section">
                        <div class="pdf-section-title">ملاحظات إضافية</div>
                        <p style="padding: 15px; line-height: 1.8;">${notes}</p>
                    </div>
                    
                    <div class="pdf-footer">
                        <p>تاريخ الإصدار: ${new Date().toLocaleDateString('ar-EG')}</p>
                        <p>نظام هُمام - جميع الحقوق محفوظة © 2023</p>
                    </div>
                </div>
            `;
            
            const element = document.createElement('div');
            element.innerHTML = pdfContent;
            element.style.position = 'absolute';
            element.style.left = '-9999px';
            document.body.appendChild(element);
            
            const opt = {
                margin: 10,
                filename: `خطة_علاجية_جماعية_${subject}.pdf`,
                image: { type: 'jpeg', quality: 0.98 },
                html2canvas: { scale: 2, useCORS: true },
                jsPDF: { unit: 'mm', format: 'a4', orientation: 'portrait' }
            };
            
            html2pdf().set(opt).from(element).save().then(() => {
                document.body.removeChild(element);
                showNotification('تم تصدير الخطة الجماعية إلى PDF بنجاح', 'success');
            }).catch(error => {
                document.body.removeChild(element);
                console.error('خطأ في تصدير PDF:', error);
                showNotification('حدث خطأ أثناء تصدير PDF', 'error');
            });
        }

        function exportToExcel() {
            showNotification('جاري تصدير البيانات إلى Excel...', 'info');
            
            const data = studentsData.map(student => {
                const totalBefore = student.before.interaction + student.before.participation + student.before.hardWork;
                const totalAfter = student.after.interaction + student.after.participation + student.after.hardWork;
                const improvement = totalBefore > 0 ? ((totalAfter - totalBefore) / totalBefore) * 100 : 0;
                
                return {
                    'اسم الطالب': student.name,
                    'التفاعل الصفي (قبل)': student.before.interaction,
                    'المشاركة الفاعلة (قبل)': student.before.participation,
                    'العمل بجد (قبل)': student.before.hardWork,
                    'النوم (قبل)': student.before.sleep,
                    'قطع سير الحصة (قبل)': student.before.interruption,
                    'عدم تفاعل (قبل)': student.before.nonInteraction,
                    'التفاعل الصفي (بعد)': student.after.interaction,
                    'المشاركة الفاعلة (بعد)': student.after.participation,
                    'العمل بجد (بعد)': student.after.hardWork,
                    'النوم (بعد)': student.after.sleep,
                    'قطع سير الحصة (بعد)': student.after.interruption,
                    'عدم تفاعل (بعد)': student.after.nonInteraction,
                    'نسبة التحسن': `${Math.round(improvement)}%`
                };
            });
            
            const worksheet = XLSX.utils.json_to_sheet(data);
            const workbook = XLSX.utils.book_new();
            XLSX.utils.book_append_sheet(workbook, worksheet, 'طلاب هُمام');
            
            XLSX.writeFile(workbook, `تقرير_طلاب_همام_${new Date().toISOString().split('T')[0]}.xlsx`);
            showNotification('تم تصدير البيانات إلى Excel بنجاح', 'success');
        }

        function exportToPDF() {
            showNotification('جاري إنشاء تقرير PDF...', 'info');
            
            let studentsRows = '';
            studentsData.forEach((student, index) => {
                const totalBefore = student.before.interaction + student.before.participation + student.before.hardWork;
                const totalAfter = student.after.interaction + student.after.participation + student.after.hardWork;
                const improvement = totalBefore > 0 ? ((totalAfter - totalBefore) / totalBefore) * 100 : 0;
                
                studentsRows += `
                    <tr>
                        <td>${index + 1}</td>
                        <td>${student.name}</td>
                        <td>${totalBefore}</td>
                        <td>${totalAfter}</td>
                        <td style="color: ${improvement > 0 ? 'green' : 'red'}">${Math.round(improvement)}%</td>
                    </tr>
                `;
            });
            
            const pdfContent = `
                <div class="pdf-content">
                    <div class="pdf-header">
                        <h1>تقرير شامل - نظام هُمام</h1>
                        <h2>همزة الوصل بين الأسرة والمدرسة</h2>
                        <p>تاريخ التقرير: ${new Date().toLocaleDateString('ar-EG')}</p>
                    </div>
                    
                    <div class="pdf-section">
                        <div class="pdf-section-title">إحصائيات عامة</div>
                        <div class="row" style="display: flex; justify-content: space-between; margin-bottom: 20px;">
                            <div style="text-align: center; flex: 1;">
                                <h3 style="color: #1a5276;">${studentsData.length}</h3>
                                <p>إجمالي الطلاب</p>
                            </div>
                            <div style="text-align: center; flex: 1;">
                                <h3 style="color: #27ae60;">78%</h3>
                                <p>مشاركة أولياء الأمور</p>
                            </div>
                            <div style="text-align: center; flex: 1;">
                                <h3 style="color: #e74c3c;">32%</h3>
                                <p>انخفاض المخالفات</p>
                            </div>
                        </div>
                    </div>
                    
                    <div class="pdf-section">
                        <div class="pdf-section-title">قائمة الطلاب وأداؤهم</div>
                        <table style="width: 100%; border-collapse: collapse; margin-top: 15px;">
                            <thead>
                                <tr style="background-color: #1a5276; color: white;">
                                    <th style="padding: 10px; border: 1px solid #ddd;">#</th>
                                    <th style="padding: 10px; border: 1px solid #ddd;">اسم الطالب</th>
                                    <th style="padding: 10px; border: 1px solid #ddd;">النقاط الإيجابية (قبل)</th>
                                    <th style="padding: 10px; border: 1px solid #ddd;">النقاط الإيجابية (بعد)</th>
                                    <th style="padding: 10px; border: 1px solid #ddd;">نسبة التحسن</th>
                                </tr>
                            </thead>
                            <tbody>
                                ${studentsRows}
                            </tbody>
                        </table>
                    </div>
                    
                    <div class="pdf-section">
                        <div class="pdf-section-title">الخطط العلاجية النشطة</div>
                        <p>عدد الخطط الفردية النشطة: ${treatmentPlans.filter(p => p.type === 'فردية' && p.status === 'نشط').length}</p>
                        <p>عدد الخطط الجماعية النشطة: ${treatmentPlans.filter(p => p.type === 'جماعية' && p.status === 'نشط').length}</p>
                    </div>
                    
                    <div class="pdf-footer">
                        <p>المرشد الطلابي: منصور موسى حامطي</p>
                        <p>نظام هُمام - جميع الحقوق محفوظة © 2023</p>
                    </div>
                </div>
            `;
            
            const element = document.createElement('div');
            element.innerHTML = pdfContent;
            element.style.position = 'absolute';
            element.style.left = '-9999px';
            document.body.appendChild(element);
            
            const opt = {
                margin: 10,
                filename: `تقرير_شامل_همام_${new Date().toISOString().split('T')[0]}.pdf`,
                image: { type: 'jpeg', quality: 0.98 },
                html2canvas: { scale: 2, useCORS: true },
                jsPDF: { unit: 'mm', format: 'a4', orientation: 'portrait' }
            };
            
            html2pdf().set(opt).from(element).save().then(() => {
                document.body.removeChild(element);
                showNotification('تم إنشاء التقرير PDF بنجاح', 'success');
            }).catch(error => {
                document.body.removeChild(element);
                console.error('خطأ في إنشاء PDF:', error);
                showNotification('حدث خطأ أثناء إنشاء PDF', 'error');
            });
        }

        function showNotification(message, type) {
            const notification = document.getElementById('notification');
            notification.textContent = message;
            notification.className = `notification ${type}`;
            notification.style.display = 'block';
            
            setTimeout(() => {
                notification.style.display = 'none';
            }, 5000);
        }

        function showLoading() {
            document.getElementById('loading-overlay').style.display = 'flex';
        }

        function hideLoading() {
            document.getElementById('loading-overlay').style.display = 'none';
        }

        // تحديث النظام عند التحميل
        window.addEventListener('load', function() {
            setTimeout(() => {
                hideLoading();
            }, 1500);
        });
    </script>
</body>
</html>
